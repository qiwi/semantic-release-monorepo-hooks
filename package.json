{
  "version": "2.9.4",
  "name": "semantic-release-monorepo-hooks",
  "description": "Semantic release monorepo hooks",
  "main": "src/index.js",
  "files": [
    "README.md",
    "CHANGELOG.md",
    "src"
  ],
  "license": "MIT",
  "keywords": [
    "monorepo hooks",
    "semantic release lerna",
    "semantic release monorepo"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:qiwi/semantic-release-monorepo-hooks.git"
  },
  "scripts": {
    "test": "npm run lint && npm run jest",
    "test_with_report": "npm test && npm run coveralls_push",
    "coveralls_push": "cat ./coverage/lcov.info | coveralls",
    "jest": "BABEL_ENV=test NODE_ENV=test jest -w 1 --detectOpenHandles --config jest.config.json",
    "lint": "standard src/**/*.js test/**/*.js"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^3.0.4",
    "@semantic-release/git": "^7.0.12",
    "@semantic-release/github": "^5.4.0",
    "@semantic-release/npm": "^5.1.9",
    "coveralls": "^3.0.4",
    "jest": "^24.8.0",
    "mock-fs": "^4.10.1",
    "semantic-release": "^15.13.16",
    "standard": "^12.0.1"
  },
  "standard": {
    "globals": [
      "jest",
      "it",
      "expect",
      "describe",
      "before",
      "beforeAll",
      "beforeEach",
      "afterAll",
      "after",
      "afterEach",
      "xdescribe",
      "xit"
    ],
    "ignore": []
  },
  "dependencies": {
    "find-git-root": "^1.0.0",
    "lodash": "^4.17.11",
    "read-pkg": "^5.1.1",
    "semver": "^6.1.1"
  },
  "release": {
    "branch": "master",
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  }
}
